{
    "name": "vati/filament-unlayer",
    "description": "Filament wrapper for unlayer editor.",
    "keywords": [
        "vati",
        "laravel",
        "filament",
        "filament-unlayer",
        "unlayer",
        "email-editor"
    ],
    "homepage": "https://github.com/vatichild/filament-unlayer",
    "support": {
        "issues": "https://github.com/vatichild/filament-unlayer/issues",
        "source": "https://github.com/vatichild/filament-unlayer"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "vati",
            "role": "Developer"
        },
        {
            "name": "InfinityXTech",
            "email": "business@infinity-x.tech",
            "role": "Original Author"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "filament/forms": "^4.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.1|^3.0",
        "pestphp/pest-plugin-arch": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0|^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Vati\\FilamentUnlayer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vati\\FilamentUnlayer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vati\\FilamentUnlayer\\UnlayerServiceProvider"
            ],
            "aliases": {
                "FilamentUnlayer": "Vati\\FilamentUnlayer\\Facades\\Unlayer"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
